{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build",
    "watchPatterns": ["src/**", "public/**", "package.json", "vite.config.ts"]
  },
  "deploy": {
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "statics": {
      "guest": {
        "directory": "dist"
      }
    }
  }
}